RESOURCE_GROUP="rg-java-vm"
VM_NAME="java-vm"
LOCATION="brazilsouth"
IMAGE="almalinux:almalinux-x86_64:9-gen2:9.5.202411260"
ADMIN_USER="azureuser"
ADMIN_PASSWORD="Fiap@2tdsvms"
VM_SIZE="Standard_B1ms"
DISK_SKU="StandardSSD_LRS"

az group create --name $RESOURCE_GROUP --location $LOCATION

az vm create \
  --resource-group $RESOURCE_GROUP \
  --name $VM_NAME \
  --image $IMAGE \
  --authentication-type password \
  --admin-username $ADMIN_USER \
  --admin-password $ADMIN_PASSWORD \
  --size $VM_SIZE \
  --storage-sku $DISK_SKU \
  --output json

az vm open-port --resource-group $RESOURCE_GROUP --name $VM_NAME --port 8080 --priority 310

--GIT
sudo yum install git -y
git --version

--NANO
sudo yum install nano -y

--DOCKER
# Instalar utilitários necessários
sudo yum install -y yum-utils
# Adicionar repositório Docker
sudo yum-config-manager --add-repo https://download.docker.com/linux/rhel/docker-ce.repo
# Instalar Docker e plugins
sudo yum install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin -y
# Iniciar o serviço Docker
sudo systemctl start docker
# Adicionar o usuário ao grupo docker (substitua `azureuser` se necessário)
sudo usermod -aG docker azureuser
# Habilitar Docker no boot
sudo systemctl enable docker.service
sudo systemctl enable containerd.service
# ⚠️ Depois disso, **desconecte e conecte novamente via SSH** para aplicar o grupo docker
